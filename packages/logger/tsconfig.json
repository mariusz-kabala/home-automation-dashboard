{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "moduleResolution": "node",
    "files": ["packages/commons/types/styles.d.ts"],
    "exclude": ["/node_modules/**/*"],
    "include": ["packages/**/*", "**/*.d.ts", "**/*.ts", "**/*.tsx"]
  }
}
